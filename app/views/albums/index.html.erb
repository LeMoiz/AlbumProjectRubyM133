<div class="container">
   <div class="row justify-content-center">
      <h2>Alben</h2>
     </div>
    </div>
    <div class="container">
       <table class="table table-hover">
          <thead class="thead-light">
             <tr>
               <th>Band</th>
                <th>Titel</th>
                 <th>Jahr</th>
                 <th colspan="2">
                 </th> </tr>
                </thead>
                <tbody>
                  <% @albums.each do |a| %>
                    <tr>
                       <td><%= a.band %>
                    </td>
                     <td><%= link_to a.title, album_path(a.id) %></td> <td><%= a.year %>
                    </td>
                    <td><%= a.songs.sum(:duration) %></td>
                      <td><%= a.songs.count %></td>
                     <td><%= link_to "Ändern", edit_album_path(a.id) %>
                    </td>
                     <td><%= link_to "Löschen", album_path(a.id), method: :delete %>
                    </td>
                   </tr>
                   <% end %>
                  </tbody>
                </table>
                <%= link_to "Album erfassen", new_album_path %><br />
                  <%= link_to "Songs", songs_path %>
                  </div>
